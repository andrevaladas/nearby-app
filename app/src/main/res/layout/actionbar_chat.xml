<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <com.chronosystems.nearbyapp.components.RoundedImageView
        android:id="@+id/iv_action_bar_chat_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_gravity="left"
        android:src="@null"
        app:paintBorder="true" />

    <TextView
        android:id="@+id/tv_actionbar_chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/iv_action_bar_chat_profile"
        android:layout_toRightOf="@+id/iv_action_bar_chat_profile"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/tv_actionbar_chat_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_actionbar_chat_name"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tv_actionbar_chat_name"
        android:paddingBottom="4dp"
        android:singleLine="true"
        android:text="online"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="italic"
        android:textColor="@android:color/white" />
</RelativeLayout>